    <a href="#" id="my_QQ"></a>
    <a href="#" id="my_Code"></a>
    <a href="#" id="to_Top"></a>
</div>

<script src="/js/jquery.min.js"></script>
<script src="/js/bootstrap.min.js"></script>
<script src="/js/index.js"></script>
