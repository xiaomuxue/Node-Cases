	<%if(code=='0'){%>
		<p class="text-center text-danger"><%=text%></p>
	<%}else if(code=='1'){%>

	<div class="container-fluid">

		<div class="col-lg-7" style="padding:0;">
			<div class="menu-header">
				<img src="..<%=obj.mainimg%>" width="100%" alt="成品图">
				<h3><%=obj.title%></h3>
				<div>
					<span class="heightlightFont"><%=obj.visits%></span>浏览

					<span id="likeMenubtn" onclick="likeMenu()" class="btn btn-def pull-right">
						<span class="glyphicon glyphicon-thumbs-up"></span>
						&nbsp;
						<span class="badge">0</span>
					</span>
				</div>
			</div>
			<div class="menu-content">
				<div style="position: relative;">
					<img class="auth-img" src="..<%=obj.icon%>" alt="点妈爱烘焙">
					<a href="#" id="authname"><%=obj.uname%></a>
					<span class="pull-right" style="line-height: 36px; color: #999; padding-right: 20px;">2016-10-15</span>
				</div>

				<table width="100%" class="table table-bordered" style="margin-top: 20px; color:#333">
					<tr>
						<td colspan="2"><h5 class="fwb">主料</h5></td>
					</tr>
					<%for(var i=0 ;i<obj.material.length;i++) {%>
					<tr>
						<td>
							<%=obj.material[i]%>
						</td>
						<td>
							<%=obj.materialnum[i]%>
						</td>
					</tr>
					<%}%>
				</table>
				<h4 style="padding-left: 5px;"><span id="title"><%obj.title%></span>做法步骤：</h4>
				<div id="menu-step" style="width: 100% ;padding: 5px 20px;">
					<%for(var i=0 ;i<obj.content.length;i++) {%>
					<div class="row bottom-div">
						<div class="col-lg-6">
							<img src="..<%=obj.imgs[i]%>" alt="步骤<%=(i+1)%>" width="100%">
						</div>
						<div class="col-lg-6">
							<p><%=(i+1)%>. <%=obj.content[i]%></p>
						</div>
					</div>
					<%}%>
				</div>
				<div class="menu-info">
					<div class="bottom-div">
						<span class="fwb">分类：</span>
						<%for(var i=0;i<obj.kinds.length;i++){%>
						<a href="/showSubdivide/<%=obj.kinds[i][0]%>" class="btn btn-def"><%=obj.kinds[i][1]%></a>
						<%}%>
					</div>
					<p class="auth-copyright">
						&copy; 本菜谱的做法由 <a href="#"><%=obj.uname%></a> 编写，未经授权不得转载
					</p>
				</div>
			</div>
			<h5 class="my-title"><span>菜名</span>的评论</h5>
			<div style="width: 100%;">
				<div class="row">
					<div class="col-lg-2">
						<img id="addComment-img" class="auth-img" src="../images/logo.png">
					</div>
					<div class="col-lg-10">
						<textarea name="foodcomment" id="comment"></textarea>
						<button onclick="addComment(<%=obj.fid%>)" class="btn btn-def pull-right">评论</button>
					</div>
				</div>
				<div>
					<div id="comment-content"></div>
					<div id="comment-page" class="text-center" style="margin-top: 30px;"></div>
				</div>

			</div>
		</div>
		<div class="col-lg-4 col-lg-push-1">
			<h5>热门菜谱</h5>
			<div class="menu-content">
				<ul class="list-ul" id="hotMenu">

				</ul>
			</div>
			<h5 style="margin-top: 20px;">人气问答</h5>
			<div class="menu-content">
				<ul class="list-ul" id="hotQuestion">

				</ul>
			</div>

			<h6 class="you-current">
				<span>你当前的位置：</span>
				<ol class="breadcrumb" style="background: none; display: inline-block;">
					<li><a href="#">熊猫美食</a></li>
					<li><a href="#">菜谱</a></li>
					<li class="active"><%=obj.title%></li>
				</ol>
			</h6>
		</div>
